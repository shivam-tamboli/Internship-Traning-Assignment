<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         version="6.0">

         <servlet>
                 <servlet-name>LoginServlet</servlet-name>
                 <servlet-class>com.shivam.LoginServlet</servlet-class>
             </servlet>

             <servlet-mapping>
                 <servlet-name>LoginServlet</servlet-name>
                 <url-pattern>/login</url-pattern>
             </servlet-mapping>

             <servlet>
                 <servlet-name>ApplyLeaveServlet</servlet-name>
                 <servlet-class>com.shivam.ApplyLeaveServlet</servlet-class>
             </servlet>

             <servlet-mapping>
                 <servlet-name>ApplyLeaveServlet</servlet-name>
                 <url-pattern>/applyLeave</url-pattern>
             </servlet-mapping>

             <servlet>
                 <servlet-name>AdminLoginServlet</servlet-name>
                 <servlet-class>com.shivam.AdminLoginServlet</servlet-class>
             </servlet>

             <servlet-mapping>
                 <servlet-name>AdminLoginServlet</servlet-name>
                 <url-pattern>/adminLogin</url-pattern>
             </servlet-mapping>

             <servlet>
                 <servlet-name>ApproveLeaveServlet</servlet-name>
                 <servlet-class>com.shivam.ApproveLeaveServlet</servlet-class>
             </servlet>

             <servlet-mapping>
                 <servlet-name>ApproveLeaveServlet</servlet-name>
                 <url-pattern>/approveLeave</url-pattern>
             </servlet-mapping>

             <servlet>
                 <servlet-name>LogoutServlet</servlet-name>
                 <servlet-class>com.shivam.LogoutServlet</servlet-class>
             </servlet>

             <servlet-mapping>
                 <servlet-name>LogoutServlet</servlet-name>
                 <url-pattern>/logout</url-pattern>
             </servlet-mapping>

             <welcome-file-list>
                 <welcome-file>login.jsp</welcome-file>
             </welcome-file-list>

</web-app>


